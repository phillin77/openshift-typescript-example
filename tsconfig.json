  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "strict": true
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ]
}

